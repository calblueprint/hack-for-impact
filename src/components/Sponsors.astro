---
import { Image } from 'astro:assets';
import clouds from '../graphics/clouds_stars.svg';
import sheep from '../graphics/sheep.svg';
import twoBttnsLogo from '../graphics/sponsors/new_2bttns.webp';
import twelveLabsLogo from '../graphics/sponsors/new_twelvelabs.webp';
import hackerEarthLogo from '../graphics/sponsors/new_hackerearth.webp';
import vespaLogo from '../graphics/sponsors/new_vespa.webp';
---

<section>
  <div class="header-container">
    <h4 id="sponsors">SPONSORS & PARTNERS</h4>
    <h3>
      A round of applause for our <b>sponsors</b>, who make all of this
      possible.
    </h3>
  </div>

  <div class="sponsors-container">
    <a href="https://www.2bttns.com/" target="_blank">
      <Image src={twoBttnsLogo} alt="2bttns" />
    </a>
    <a href="https://www.hackerearth.com/" target="_blank">
      <Image src={hackerEarthLogo} alt="HackerEarth" />
    </a>
    <a href="https://twelvelabs.io/" target="_blank">
      <Image src={twelveLabsLogo} alt="Twelve Labs" />
    </a>
    <a href="https://vespa.ai/" target="_blank">
      <Image src={vespaLogo} alt="Vespa" />
    </a>
  </div>

  <Image class="clouds" src={clouds} alt="clouds and stars" />
  <Image class="sheep" src={sheep} alt="sheep" />
</section>

<style lang="scss">
  @use '../styles/fonts';
  @use '../styles/breakpoints';

  section {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6rem;
    padding-top: 11.25rem;
    padding-inline: 20px;

    .header-container {
      display: flex;
      width: 100%;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1.5rem;

      b {
        font-family: fonts.$serif;
        font-size: 1.75rem;
        font-weight: 600;
        line-height: 150%;
      }
    }

    .sponsors-container {
      display: flex;
      width: min(770px, 100%);
      justify-content: center;
      align-content: center;
      gap: 6px min(10%, 80px);
      flex-wrap: wrap;

      a {
        transition: 200ms ease-in-out;

        &:hover {
          transform: scale(1.025);
        }
      }

      img {
        height: 50px;
        width: auto;
        object-fit: cover;
        flex-shrink: 0;

        @media (min-width: breakpoints.$tablet) {
          height: 100px;
        }
      }
    }

    .clouds {
      position: absolute;
      left: -400px;
      bottom: -96px;
      z-index: -1;
      display: none;
      transform: translateX(clamp(0px, 30vw, 300px));

      @media (min-width: breakpoints.$tablet) {
        display: block;
      }
    }

    .sheep {
      position: absolute;
      right: -400px;
      top: 64px;
      z-index: -1;
      display: none;
      transform: translateX(clamp(-400px, -30vw, 0px));

      @media (min-width: breakpoints.$tablet) {
        display: block;
      }
    }
  }
</style>
